<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <ImageView
        android:id="@+id/logo_sign_up"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/app_logo"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTES"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/logo_sign_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"/>

<!--    User-->
    <EditText
        android:id="@+id/name"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:layout_marginStart="10dp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/name_sign_up"
        app:layout_constraintLeft_toRightOf="@id/ivPerson"/>
    <ImageView
        android:id="@+id/ivPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_baseline_person_20"
        app:layout_constraintTop_toBottomOf="@id/name_sign_up"
        app:layout_constraintBottom_toTopOf="@id/password"
        app:layout_constraintRight_toLeftOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"/>

<!--    Password-->
    <EditText
        android:id="@+id/password"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Enter password"
        android:layout_marginStart="10dp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toRightOf="@id/ivPerson"/>
    <ImageView
        android:id="@+id/ivPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_baseline_person_20"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toTopOf="@id/confirm"
        app:layout_constraintRight_toLeftOf="@id/password"
        app:layout_constraintLeft_toLeftOf="parent"/>

<!--    Confirm-->
    <EditText
        android:id="@+id/confirm"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:layout_marginStart="10dp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintLeft_toRightOf="@id/ivPerson"/>
    <ImageView
        android:id="@+id/ivConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_baseline_person_20"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintBottom_toTopOf="@id/mobile"
        app:layout_constraintRight_toLeftOf="@id/confirm"
        app:layout_constraintLeft_toLeftOf="parent"/>

<!--    Mobile-->
    <EditText
        android:id="@+id/mobile"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:layout_marginStart="10dp"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/confirm"
        app:layout_constraintLeft_toRightOf="@id/ivMobile"/>
    <ImageView
        android:id="@+id/ivMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_baseline_person_20"
        app:layout_constraintTop_toBottomOf="@id/confirm"
        app:layout_constraintBottom_toTopOf="@id/rbGender"
        app:layout_constraintRight_toLeftOf="@id/mobile"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <RadioButton
        android:text="Gender"
        android:textColor="@color/purple_700"
        android:id="@+id/rbGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobile"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>